<h1>Contact Us</h1>
  <% if @message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@message.errors.count, "error") %> prohibited this show from being saved:</h2>

      <ul>
      <% @message.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<%= form_for @message do |f| %>
    <div class='field'>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>
    <div class='field'>
        <%= f.label :email %>
        <%= f.text_field :email %>
    </div>
    <div class='field'>
        <%= f.label :content %><br />
        <%= f.text_area :content %>
    </div>
    <%= f.submit 'Send Message'%>
<% end %>
